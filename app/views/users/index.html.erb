<script type="text/javascript">
	$(function(){
	    var x = 0;
	    setInterval(function(){
	        x+=1;
	        $('.container').css('background-position', x + 'px 0');
	    },30);

	    eventListeners();
	})

	function eventListeners(){
		$('#login').on('click touch', showClipModalLogin);
		$('#signup').on('click touch', showClipModalSignUp)
		$('.close-new-clip').on('click touch', closeClipModal);
	};

	function showClipModalLogin() {
		$('#login').css('margin-top','10px');
		$('.modal_login').fadeIn();
	}

	function showClipModalSignUp() {
		$('.modal_signup').fadeIn();
	}

	function closeClipModal() {
		$('.modal_login').fadeOut();
		$('.modal_signup').fadeOut();
	}
</script>

<div class='container'>
	<div id="logo">
		<center>
			<h1>Little<br>
				Pooper</h1>
		</center>
	</div>
	<center>
	<%= image_tag('login.png', alt: "Login", size:'400x400', class: 'button', id:'login')%>
	<%= image_tag('signup.png', alt: "Sign Up", size:'400x400', class: 'button', id: 'signup')%>

	</center>
	<center>
	<%= image_tag('walking_dragon.gif', alt:"Walking Dragon", class: 'dragon')%>
	</center>

</div>